<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <link href="{% vite '/assets/css/style.css' %}" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="{{ '/assets/images/favicon.svg' | url }}">
    <meta property="og:title" content="{{ site.title }}">
    <meta property="og:url" content="{{ site.url | url }}">
    <meta property="og:type" content="website">
    <meta property="og:image" content="">
    <meta property="og:site_name" content="{{ site.author }}">
    <meta name="theme-color" content="#ffffff"/>
    <meta name="description" content="{{ site.description }}" />
    <meta property="og:description" content="{{ site.description }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }} - {{ site.author }}</title>
    <script type="module" src="{% vite '/assets/js/turbo.js' %}" defer ></script>
    {%- for link in js -%}
      <script type="module" src="{% vite link %}" defer ></script>
    {%- endfor -%}
    {%- for link in css -%}
      <link href="{% vite link %}" rel="stylesheet">
    {%- endfor -%}
    {%- bootVite -%}
  </head>
  <body>
    {%- include "partials/navigation.njk" -%}
    <main class="{{ class }}">{{ content | safe }}</main>
  </body>
  <!-- Yann Prono, https://github.com/Mcdostone -->
</html>
