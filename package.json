{
  "name": "marion-colomer-website",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "DEBUG=true eleventy --serve --watch",
    "build:eleventy": "ELEVENTY_ENV=production eleventy",
    "build:vite": "vite build",
    "build": "npm-run-all --continue-on-error build:vite build:eleventy",
    "stylelint": "stylelint --config package.json --fix src/assets/css/*.css",
    "prettier": "prettier --check .",
    "lint": "npm-run-all --silent --continue-on-error stylelint prettier"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mcdostone/marion-colomer-website.git"
  },
  "author": "Yann Prono",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mcdostone/marion-colomer-website/issues"
  },
  "homepage": "https://github.com/Mcdostone/marion-colomer-website",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@squoosh/cli": "^0.7.2",
    "autoprefixer": "^10.4.2",
    "colorthief": "^2.3.2",
    "fast-glob": "^3.2.10",
    "image-size": "^1.0.1",
    "jsdom": "^19.0.0",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.4.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.2.0",
    "postcss": "^8.4.5",
    "postcss-import-url": "^7.0.0",
    "prettier": "^2.5.1",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-prettier": "^2.0.0",
    "svgo": "^2.8.0",
    "terser": "^5.10.0",
    "vite": "^2.7.12"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "declaration-block-no-redundant-longhand-properties": true,
      "declaration-block-trailing-semicolon": "never",
      "prettier/prettier": true,
      "selector-class-pattern": "^(([a-z][a-z0-9]*)(-[a-z0-9]+)*|pswp.*)$"
    }
  },
  "prettier": {
    "printWidth": 160,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@hotwired/turbo": "^7.1.0",
    "photoswipe": "github:dimsemenov/photoswipe#v5-beta"
  }
}
