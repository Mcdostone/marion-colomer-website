{
  "name": "blog",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev:eleventy": "eleventy --serve --watch",
    "dev:vite": "vite --mode development --debug",
    "dev": "npm-run-all --parallel --silent --continue-on-error dev:eleventy dev:vite",
    "build:eleventy": "ELEVENTY_ENV=production eleventy build",
    "build:vite": "vite build",
    "build": "npm-run-all --continue-on-error build:vite build:eleventy",
    "stylelint": "stylelint --config package.json --fix src/assets/css/*.css",
    "prettier": "prettier --check .",
    "lint": "npm-run-all --silent --continue-on-error stylelint prettier"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mcdostone/blog.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mcdostone/blog/issues"
  },
  "homepage": "https://github.com/Mcdostone/blog#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@squoosh/cli": "^0.7.2",
    "autoprefixer": "^10.3.1",
    "colorthief": "^2.3.2",
    "fast-glob": "^3.2.7",
    "image-size": "^1.0.0",
    "jsdom": "^16.6.0",
    "markdown-it": "^12.1.0",
    "markdown-it-anchor": "^8.1.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "postcss": "^8.3.6",
    "postcss-import-url": "^7.0.0",
    "prettier": "^2.3.2",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "svgo": "^2.3.1",
    "terser": "^5.7.1",
    "vite": "^2.4.4"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "declaration-block-no-redundant-longhand-properties": true,
      "declaration-block-trailing-semicolon": "never",
      "prettier/prettier": true
    }
  },
  "prettier": {
    "printWidth": 160,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@hotwired/turbo": "^7.0.0-rc.1",
    "photoswipe": "github:dimsemenov/photoswipe#v5-beta"
  }
}
