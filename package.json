{
  "name": "marion-colomer-website",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev-eleventy": "nodemon -e md,js,ts,html,njk --watch ./src --exec 'npx eleventy --serve'",
    "dev-vite": "vite --mode development --host $HOST",
    "eleventy": "eleventy",
    "vite": "vite build",
    "build": "npm-run-all --continue-on-error vite eleventy",
    "tsc": "npx tsc  --noEmit",
    "stylelint": "stylelint --config package.json --fix src/**/*.css",
    "prettier": "prettier --check .",
    "eslint": "eslint .",
    "lint": "npm-run-all --silent --continue-on-error stylelint prettier eslint",
    "webhint": "npx hint http://localhost:8080"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mcdostone/marion-colomer-website.git"
  },
  "author": "Yann Prono",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mcdostone/marion-colomer-website/issues"
  },
  "homepage": "https://github.com/Mcdostone/marion-colomer-website",
  "devDependencies": {
    "@11ty/eleventy": "^v2.0.0-canary.13",
    "@11ty/eleventy-img": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "autoprefixer": "^10.4.13",
    "colorthief": "^2.3.2",
    "eslint": "^8.31.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "fast-glob": "^3.2.12",
    "html-minifier-terser": "^7.1.0",
    "image-size": "^1.0.2",
    "jsdom": "^21.0.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.6",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-import-url": "^7.2.0",
    "prettier": "^2.8.3",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-prettier": "^2.0.0",
    "svgo": "^3.0.2",
    "terser": "^5.16.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "^3.0.9"
  },
  "dependencies": {
    "@hotwired/turbo": "^7.2.4",
    "photoswipe": "^5.3.4"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "declaration-block-no-redundant-longhand-properties": true,
      "declaration-block-trailing-semicolon": "never",
      "comment-empty-line-before": "never",
      "prettier/prettier": true,
      "selector-class-pattern": "^(([a-z][a-z0-9]*)(-[a-z0-9]+)*|pswp.*)$"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:unicorn/recommended"
    ],
    "globals": {
      "globalThis": false
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "_site",
      "node_modules/*"
    ]
  },
  "prettier": {
    "printWidth": 160,
    "semi": false,
    "singleQuote": true
  },
  "volta": {
    "node": "16.13.0"
  },
  "htmlnano": {
    "preset": "safe"
  }
}
